<body class="is-preload">

	<!-- Header -->
	<div id="header">

		<div class="top">

			<!-- Logo -->
			<div id="logo">
				<h1 id="title">Cozinha Bruta</h1>
			</div>

			<!-- Nav -->
			<nav id="nav">
				<ul>
					<li>
						<a href="#top" id="top-link"><span class="icon solid fa-home">Intro</span></a>
					</li>

					<li>
						<a href="#sumario" id="sumario-link"><span class="fas fa-list">Sum√°rio</span></a>
					</li>
					
					<hr />
				</ul>
			</nav>

		</div>

		<div class="bottom">

			<!-- Social Icons -->
			<ul class="icons">
				<li><a href="https://github.com/rafael-adcp/receitas.git" target="_blank"
						class="icon brands fa-github"><span class="label">Github</span></a></li>
				<li><a href="mailto:rafael_adcp@hotmail.com" class="icon solid fa-envelope"><span
							class="label">Email</span></a></li>
			</ul>

		</div>

	</div>

	<!-- Main -->
	<div id="main">

		<!-- Intro -->
		<section id="top" class="one dark cover">
			<div class="container">

				<header>
					
					<h2 class="alt"><strong>Cozinha Bruta</strong> <br />
					 (üë®‚Äçüç≥ + üë©‚Äçüç≥) + (üç∑ || üç∫) + üé∂ = <s>muita lou√ßa e
							bagun√ßa</s> üç≤</h2>
					
				</header>
			</div>
		</section>
		
		<!-- Sum√°rio -->
		<section id="sumario" class="one dark cover">
			<div class="container">
				<header>
					<h2>Sum√°rio</h2>
				</header>
				{{#each receitas}}
					<li style="text-align: left;">
						<a href="#{{id}}" id="{{id}}-link"><span>{{titulo}}</span></a>
					</li>
				{{/each}}
			</div>
		</section>

		{{#each receitas}}
		<!-- Receitas -->
		<section id="{{id}}" class="{{cssClass}}">
			<!-- tem q alterar entre two e three pra mudar a cor do fundo -->
			<div class="container">

				<header>
					<h2>{{titulo}}</h2>
				</header>

				<p>{{descricao}}

					{{#if obs}}
					<br /><br />
					<b>Observa√ß√£o:</b> {{obs}}
					{{/if}}
				</p>

				<div class="row">
					<div class="col-sm">
						<header>
							<h3>Tempo de preparo: {{tempo_preparo}}</h3>
						</header>
					</div>
				</div>

				<div class="row">
					<div class="col-sm">
						<header>
							<h3>Fotos:</h3>
						</header>
					</div>
				</div>

				{{#each fotos}}
					{{#if openRow}}
						<div class="row">
					{{/if}}

					<div class="col-4 col-12-mobile">
						<article class="item">
							<a href="{{path}}" class="image fit"><img src="{{path}}" alt="" /></a>
							<header>
								<h3>{{titulo}}</h3>
							</header>
						</article>
					</div>

					{{#if closeRow}}
						</div>
					{{/if}}

				{{/each}}

				<div class="row">
					<div class="col-sm">
						<header style="text-align: left;">
							<h3>Ingredientes:</h3>
						</header>

						<ul style="text-align:left;">
							{{#each ingredientes}}
							<li>{{this}}</li>
							{{/each}}
						</ul>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-12">
						<header style="text-align: left;">
							<h3>Modo de fazer:</h3>
						</header>

						<ul style="text-align:left;">
							{{#each preparo}}
							<li>{{this}}</li>
							{{/each}}
						</ul>
					</div>
				</div>


				{{#if fontes.length}}
				<div class="row">
					<div class="col-lg-12">
						<header style="text-align: left;">
							<h3>Fontes:</h3>
						</header>

						<ul style="text-align:left;">
							{{#each fontes}}
							<li>{{this}}</li>
							{{/each}}
						</ul>
					</div>
				</div>
				{{/if}}


			</div>
		</section>
		{{/each}}
	</div>

